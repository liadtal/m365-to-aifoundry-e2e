{
  "AgentApplication": {
    "StartTypingTimer": true,
    "RemoveRecipientMention": false,
    "NormalizeMentions": false,
    "UserAuthorization": {
      "AutoSignIn": false,
      "Handlers": {
        "SSO": {
          "Settings": {
            "AzureBotOAuthConnectionName": "{{OAUTHCONNECTIONNAME}}"
          }
        }
      }
    }
  },

  "TokenValidation": {
    "Audiences": [
      "{{BOT_ID}}" // this is the Client ID used for the Azure Bot
    ]
  },

  "Connections": {
    "ServiceConnection": {
      "Settings": {
        "AuthType": "UserManagedIdentity", // this is the AuthType for the connection, valid values can be found in Microsoft.Agents.Authentication.Msal.Model.AuthTypes.
        "ClientId": "{{BOT_ID}}", // this is the Client ID used for the connection.
        "TenantId": "{{BOT_TENANT_ID}}",
        "Scopes": [
          "https://api.botframework.com/.default"
        ]
      }
    }
  },
  "ConnectionsMap": [
    {
      "ServiceUrl": "*",
      "Connection": "BotServiceConnection"
    }
  ],

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Agents": "Information",
      "AzureAgentToM365ATK": "Debug",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  // This is the configuration for the AI services, use environment variables or user secrets to store sensitive information.
  // Do not store sensitive information in this file
  "AIServices": {
    "AzureAIFoundryProjectEndpoint": "https://operations-agent-test-resource.services.ai.azure.com/api/projects/operations-agent-test", // Endpoint for AI services
    "AgentID": "asst_Ko7L4ZSZJPI8TP5dxG8HSbjG",
    "ManagedIdentityClientId": "{{BOT_ID}}" // Client ID of the User-Assigned Managed Identity (same as BOT_ID)
  }
}
